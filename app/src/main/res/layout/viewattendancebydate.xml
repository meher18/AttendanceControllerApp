<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:padding="10dp"
            android:background="@drawable/updategradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:background="@drawable/roundedtextview"
                android:inputType="date"

                android:id="@+id/date_for_attendance"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:hint="d/m/yyyy">

            </EditText>
            <EditText
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/roundedtextview"
                android:id="@+id/subject_for_attendance"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Subject">

            </EditText>

            <Button
                android:layout_marginRight="10dp"
                android:background="@drawable/ripplebutton"
                android:id="@+id/button_for_date_attendance"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right|center"
                android:text="SUBMIT"></Button>


                <ListView
                    android:id="@+id/listview_for_attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/materialCardView">

                </ListView>



        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>